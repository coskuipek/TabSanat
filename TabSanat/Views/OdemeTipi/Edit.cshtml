@model PaymentTypeFormModel

@{
    ViewData["Title"] = "Ödeme Tipi Düzenle";
    ViewData["Heading"] = "Ödeme Tipi Düzenle";
}
<div class="card-box">
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit" autocomplete="off" class="form">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Ödeme Tipi Düzenle" class="btn btn-primary waves-effect waves-light" />
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
