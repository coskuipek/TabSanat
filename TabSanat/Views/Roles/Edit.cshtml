@model TabSanat.ViewModels.Identity.RoleViewModel

@{
    ViewData["Title"] = "Rol Düzenle";
    ViewData["Heading"] = "Rol Düzenle";
}

<div class="card-box">
    <div class="row">
        <div class="card-body">
            <div class="col-md-12">
                <form asp-action="Edit" autocomplete="off" class="form">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="row">
                        @for (int i = 0; i < Model.Claims.Count; i++)
                        {
                            <div class="col-sm-2">
                                <input type="hidden" asp-for="@Model.Claims[i].ClaimType " />
                                <input asp-for="@Model.Claims[i].IsSelected" class="form-check-input" />
                                <label class="form-check-label" asp-for="@Model.Claims[i].IsSelected">@Model.Claims[i].ClaimType</label>
                            </div>
                        }

                    </div>
                    <div class="card-footer">
                        <input type="submit" value="Rol Oluştur" class="btn btn-primary waves-effect waves-light" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
