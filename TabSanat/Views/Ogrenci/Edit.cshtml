@model StudentFormModel
@section Styles{
    <link href="~/assets/libs/bootstrap-datepicker/bootstrap-datepicker.min.css" rel="stylesheet" type="text/css" />
}
@{
    ViewData["Title"] = "Edit";
    ViewData["Heading"] = Model.FullName + " - Düzenle";
    var photoPath = "~/images/" + (Model.PhotoPath ?? "noimage.jpg");
}
<form asp-action="Edit" enctype="multipart/form-data" autocomplete="off" class="form">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="card-box">
        <div class="row">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="PhotoPath" />
            <div class="col-4">
                <table class="table table-sm">
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.FirstName)</td>
                        <td>
                            <input asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.LastName)</td>
                        <td>
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.RegisterDate)</td>
                        <td>
                            <input asp-for="RegisterDate" class="form-control datepicker" type="text" />
                            <span asp-validation-for="RegisterDate" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.BirthDate)</td>
                        <td>
                            <input asp-for="BirthDate" class="form-control datepicker" type="text" />
                            <span asp-validation-for="BirthDate" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.PhoneNo)</td>
                        <td>
                            <input asp-for="PhoneNo" class="form-control" />
                            <span asp-validation-for="PhoneNo" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.Email)</td>
                        <td>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.TcKimlikNo)</td>
                        <td>
                            <input asp-for="TcKimlikNo" class="form-control" />
                            <span asp-validation-for="TcKimlikNo" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.Institution)</td>
                        <td>
                            <input asp-for="Institution" class="form-control" />
                            <span asp-validation-for="Institution" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.DiscountOfStudent.Name)</td>
                        <td>
                            <select asp-for="DiscountOfStudent.Id" class="form-control" asp-items="ViewBag.DiscountId">
                                <option value="">İndirim yok</option>
                            </select>
                            <span asp-validation-for="DiscountOfStudent.Id" class="text-danger"></span>
                        </td>
                    </tr>

                </table>
            </div>
            <div class="col-5">
                <table class="table table-sm">
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.MotherFullName)</td>
                        <td>
                            <input asp-for="MotherFullName" class="form-control" />
                            <span asp-validation-for="MotherFullName" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.MotherPhoneNo)</td>
                        <td>
                            <input asp-for="MotherPhoneNo" class="form-control" />
                            <span asp-validation-for="MotherPhoneNo" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.MotherJob)</td>
                        <td>
                            <input asp-for="MotherJob" class="form-control" />
                            <span asp-validation-for="MotherJob" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.FatherFullName)</td>
                        <td>
                            <input asp-for="FatherFullName" class="form-control" />
                            <span asp-validation-for="FatherFullName" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.FatherPhoneNo)</td>
                        <td>
                            <input asp-for="FatherPhoneNo" class="form-control" />
                            <span asp-validation-for="FatherPhoneNo" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.FatherJob)</td>
                        <td>
                            <input asp-for="FatherJob" class="form-control" />
                            <span asp-validation-for="FatherJob" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2">@Html.DisplayNameFor(model => model.Address)</td>
                    </tr>
                    <tr>
                        <td colspan="2">
                            <input asp-for="Address" class="form-control" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </td>
                    </tr>
                </table>

                <div class="card-box widget-icon border">
                    <div class="avatar-lg float-left">
                        <i class="mdi mdi-currency-try text-dark avatar-title display-4 m-0"></i>
                    </div>
                    <div class="wid-icon-info text-right">
                        <p class="text-muted mb-1 font-13 text-uppercase">Toplam Borç</p>
                        <h4 class="mb-1 counter">
                            <input asp-for="Balance" class="form-control" />
                            <span asp-validation-for="Balance" class="text-danger"></span>
                        </h4>
                    </div>
                </div>

            </div>
            <div class="col-3">
                <div class="filter-item all web illustrator">
                    <div class="gal-box">
                        <img src="@photoPath" asp-append-version="true" class="img-fluid" alt="work-thumbnail">

                    </div>
                    <div class="form-group">
                        <label asp-for="Photo" class="control-label"></label>
                        <input asp-for="Photo" class="form-control" />
                    </div>
                </div>
            </div>
        </div>
    </div>




    <div class="form-group">
        <input type="submit" value="Kaydet" class="btn btn-primary waves-effect waves-light" />
    </div>
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/assets/libs/bootstrap-datepicker/bootstrap-datepicker.min.js"></script>
    <script src="~/assets/libs/bootstrap-datepicker/locales/bootstrap-datepicker.tr.min.js"></script>
    <script>
        $(document).ready(function () {
            //$(".select2").select2({
            //    language: "tr"
            //});

            $(".datepicker").datepicker({
                autoclose: true,
                language: "tr",
                orientation: "bottom"
            });
        });
    </script>
}
