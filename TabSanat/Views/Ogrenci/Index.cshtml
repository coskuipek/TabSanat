@model IEnumerable<StudentViewModel>

@{
    
}
@section Styles {
    @{await Html.RenderPartialAsync("DataTables/_ButtonsStyles");}
}

<div class="row">
    <div class="col-12">
        <div class="card border">
            <div class="card-body">
                <p>
                    <a asp-action="Yeni" class="btn btn-primary waves-effect waves-light btn-xs"><i class="fa fa-plus-square mr-1"></i> Yeni Öğrenci </a>
                </p>

                <table class="table table-striped" id="datatable-buttons" style="width:100%;display:none">
                    
                    <thead>
                        <tr>
                            <th class="font-weight-bold">
                                @Html.DisplayNameFor(model => model.FullName)
                            </th>
                            <th class="font-weight-bold">
                                @Html.DisplayNameFor(model => model.BirthDate)
                            </th>
                            <th class="font-weight-bold">
                                @Html.DisplayNameFor(model => model.RegisterDate)
                            </th>
                            <th class="font-weight-bold">
                                @Html.DisplayNameFor(model => model.PhoneNo)
                            </th>
                            <th class="font-weight-bold">
                                @Html.DisplayNameFor(model => model.Email)
                            </th>
                            <th class="font-weight-bold">
                                @Html.DisplayNameFor(model => model.Balance)
                            </th>
                            <th style="width:5%" class="no-sort"></th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model.OrderBy(x=> x.FullName))
                        {
                            <tr>
                                <td>
                                    <a asp-controller="Ogrenci" asp-action="Details" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.FullName)</a>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.BirthDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.RegisterDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PhoneNo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Balance)
                                </td>
                                <td class="text-center">
                                    <ul class="mb-0" style="display:inline-table;">
                                        <li class="list-inline-item dropdown notification-list">
                                            <a class="nav-link dropdown-toggle waves-effect waves-light nav-user remixicon-settings-4-fill" data-toggle="dropdown" href="#" role="button"
                                               aria-haspopup="false" aria-expanded="false">

                                            </a>
                                            <div class="dropdown-menu dropdown-menu-right profile-dropdown " aria-labelledby="Preview">
                                                <a asp-action="Edit" asp-route-id="@item.Id" class="dropdown-item notify-item">
                                                    Düzenle
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@item.Id" class="dropdown-item notify-item">
                                                    Sil
                                                </a>
                                            </div>
                                        </li>
                                    </ul>

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("DataTables/_ButtonsScripts");}
}
